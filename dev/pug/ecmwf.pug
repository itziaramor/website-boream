  -
    var PROJECT = {
      modifier: "project--dark",
      sourceDesktop: "assets/images/projects/AYRE_Cabecera_Desktop.jpg",
      sourceTablet: "assets/images/projects/AYRE_Cabecera_Tablet.jpg",
